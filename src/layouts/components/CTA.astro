---
const { title, bg_color, btn_color, url, btn_text } = Astro.props;
---
  <div class="container px-4 mx-auto mt-8 mb-8">
    <div class={bg_color + ' p-12  rounded-lg'}>
      <div class="flex flex-wrap items-center -mx-4">
        <div class="w-full md:w-3/4 px-4">
          <div class="lg:ml-auto mb-5 lg:mb-0">
            <h3 class="mb-2 h2">{title}</h3>
            <p class="text-gray-500"><slot/></p>
          </div>
        </div>
        <div class="w-full md:w-1/4 px-4">
            <div class="flex max-w-md">
              <a href={url}>
              <button class={btn_color + ' inline-block px-5 py-3 text-md text-white font-semibold rounded transition duration-200'}>{btn_text}</button>
              </a>
            </div>
        </div>
      </div>
    </div>
  </div>
