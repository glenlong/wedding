---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import { BsArrowRightCircle } from "react-icons/bs";
import type { THub } from "@/types";
import { sortByOrder } from "@/lib/utils/sortFunctions";

const { hubs } = Astro.props;
const sortedHubs = sortByOrder(hubs);
---

<div class="row justify-center">
  {
    sortedHubs.map((hub: THub) => (
      <div class="col-12 mb-8 sm:col-6 md:col-4">
        {hub.data.image && (
          <div class="mb-4">
          <a
            href={`/${hub.slug}`}
            class="block hover:text-primary transition duration-200"
          >
            <Image
              src={hub.data.image}
              alt={hub.data.title}
              height={420}
              width={420}
              class={'mx-auto rounded-lg p-4 pb-0 ' + hub.data.image_bg_color}
            />
            </a>
          </div>
        )}
        <h3 class="h4 mt-8 mb-3">
          <a
            href={`/${hub.slug}`}
            class="block hover:text-primary transition duration-200"
          >
            {hub.data.meta_title}
          </a>
        </h3>
      </div>
    ))
  }
</div>
